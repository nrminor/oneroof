params {
    // set platform
    platform              = "illumina"

    // inputs - intentionally missing illumina_fastq_dir to test error handling
    refseq                = "${projectDir}/tests/data/test_reference.fasta"
    ref_gbk               = "${projectDir}/tests/data/test_reference.gbk"

    // Minimum variant frequency to call a variant.
    min_variant_frequency = 0.05

    // the minimum acceptable average quality for a given read
    min_qual              = 20

    // base test results directory
    test                  = "${projectDir}/test_results"

    // Where to place the workflow run command
    run_command           = test

    // paired read merging
    merged                = test + "/01_merged_reads"

    // primer handling results
    primer_handling       = test + "/02_primer_handling"
    respliced             = primer_handling + "/01_respliced_primers"
    complete_amplicons    = primer_handling + "/02_complete_amplicons"
    merged_by_sample      = primer_handling + "/03_merged_by_sample"

    // alignment results
    alignment             = test + "/03_alignments"
    genomecov             = alignment + "/01_genomecov"
    cov_plots             = alignment + "/02_coverage_plots"

    // consensus results
    consensus             = test + "/04_consensus_seqs"

    // variant results
    variants              = test + "/05_variants"
    ivar                  = variants + "/01_ivar_tables"
    vcf                   = variants + "/02_annotated_vcfs"
    variant_tsv           = variants + "/03_variant_tsv"

    // qc results
    qc                    = test + "/06_QC"

    // phylo results
    phylo                 = test + "/07_phylo"
    nextclade             = phylo + "/01_nextclade"

    // metagenomic results
    metagenomics          = test + "/08_metagenomics"
    classify_sample       = metagenomics + "/01_classify_sample"
    sylph_tax             = metagenomics + "/02_sylph_tax"

    // reporting results
    report_dir            = test + "/09_report"
}
