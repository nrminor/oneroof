/*
 * Reporting configuration for OneRoof
 *
 * This config defines parameters for the reporting system including
 * JSON report generation, MultiQC integration, and QC thresholds.
 */

params {

    // --- Report Generation Flags ---

    // Generate JSON report files (oneroof_report.json, oneroof_report_summary.json)
    generate_json_report   = true

    // Generate MultiQC report with OneRoof custom content
    generate_multiqc       = true

    // Generate static visualization plots (coverage heatmap, bar charts)
    generate_static_plots  = true


    // --- Report Detail Level ---

    // Level of detail in JSON report: "summary", "standard", or "full"
    // - summary: Aggregates only, no per-sample details
    // - standard: Per-sample metrics, no variant lists
    // - full: Everything including variant details
    report_level           = "standard"


    // --- QC Thresholds ---

    // Coverage thresholds (fraction of genome at >=10x depth)
    qc_coverage_pass       = 0.95    // >=95% for pass
    qc_coverage_warn       = 0.80    // >=80% for warn, below is fail

    // Completeness thresholds (fraction of non-N bases in consensus)
    qc_completeness_pass   = 0.98    // >=98% for pass
    qc_completeness_warn   = 0.90    // >=90% for warn, below is fail


    // --- Report Output Directory ---

    // This is set dynamically in the workflow based on platform:
    // - Nanopore: ${params.ont_results}/report
    // - Illumina: ${params.test}/report
    // Uncomment to override:
    // report_dir = "${params.results}/report"

}
